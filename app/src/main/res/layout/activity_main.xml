<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    android:paddingTop="18dp"
    android:paddingBottom="18dp">

    <!-- 직사각형의 큰 배경 생성 color:하얀색 -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardMain"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        app:cardCornerRadius="28dp"
        app:cardElevation="14dp"
        app:cardUseCompatPadding="true"
        app:cardBackgroundColor="@color/TP_White"
        android:backgroundTint="@color/TP_White"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="18dp">

            <!-- 상단 타이틀 : Tone Pack -->

            <!-- 설정 아이콘 파일명 : ic_setttings -->

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:fontFamily="@font/black_cat"
                android:gravity="center"
                android:text="Tone\nPack"
                android:textColor="#3E2723"
                android:textSize="70sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.496"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <FrameLayout
                android:id="@+id/btnSettings"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="settings"
                    android:padding="9dp"
                    android:src="@drawable/ic_settings" />
            </FrameLayout>

            <!-- 타이틀과 목록 사이 구분선 -->

            <!-- 인사 -->

            <View
                android:id="@+id/divider"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="36dp"
                android:background="#4E342E"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvHello" />

            <TextView
                android:id="@+id/tvHello"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:fontFamily="@font/cute"
                android:gravity="center"
                android:text="Write smarter messages with the right tone, every time.\nHelping early-career professionals communicate with confidence."
                android:textColor="#4E342E"
                android:textSize="10sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvTitle" />

            <!-- 기능 목록 3개를 쌓기 -->

            <LinearLayout
                android:id="@+id/listArea"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/divider"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <!-- 목록 1_템플릿작성하기 -->
                <LinearLayout
                    android:id="@+id/actionWrite"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_marginBottom="14dp"
                    android:background="@drawable/bg_action_card"
                    android:orientation="horizontal"
                    android:padding="14dp"
                    android:gravity="center_vertical">

                    <FrameLayout
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:background="@drawable/bg_icon_box">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="12dp"
                            android:src="@drawable/ic_pencil"
                            android:contentDescription="write"/>
                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingStart="12dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/cute"
                            android:text="Template"
                            android:textSize="17sp"
                            android:textColor="#4E342E"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:fontFamily="@font/cute"
                            android:text="필요한 템플릿을 직접 작성하고 관리할 수 있습니다."
                            android:textSize="10dp"
                            android:textColor="#4E342E"/>
                    </LinearLayout>

                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:src="@drawable/ic_chevron_right"
                        android:contentDescription="go"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="18dp"/>

                <!-- 목록2_커뮤니티 둘러보기-->
                <LinearLayout
                    android:id="@+id/actionCommunity"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_marginBottom="14dp"
                    android:background="@drawable/bg_action_card"
                    android:orientation="horizontal"
                    android:padding="14dp"
                    android:gravity="center_vertical">

                    <FrameLayout
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:background="@drawable/bg_icon_box">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="12dp"
                            android:src="@drawable/ic_chat"
                            android:contentDescription="community"/>
                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingStart="12dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/cute"
                            android:text="Community"
                            android:textSize="17sp"
                            android:textColor="#4E342E"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:fontFamily="@font/cute"
                            android:text="운영자 추천 템플릿을 확인할 수 있습니다."
                            android:textSize="10dp"
                            android:textColor="#4E342E"/>

                    </LinearLayout>

                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:src="@drawable/ic_chevron_right"
                        android:contentDescription="go"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="18dp"/>

                <!-- 목록3_마이페이지 들어가기 -->
                <LinearLayout
                    android:id="@+id/actionMyPage"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:background="@drawable/bg_action_card"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="14dp">

                    <FrameLayout
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:background="@drawable/bg_icon_box">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:contentDescription="mypage"
                            android:padding="12dp"
                            android:src="@drawable/ic_user" />
                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        android:paddingStart="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/cute"
                            android:text="My Page"
                            android:textColor="#4E342E"
                            android:textSize="17sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:fontFamily="@font/cute"
                            android:text="저장한 템플릿과 활동 기록을 확인할 수 있습니다."
                            android:textColor="#4E342E"
                            android:textSize="10dp" />

                    </LinearLayout>

                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:contentDescription="go"
                        android:src="@drawable/ic_chevron_right" />
                </LinearLayout>


            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
