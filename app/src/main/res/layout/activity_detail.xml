<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    android:padding="18dp"
    tools:context=".ui.detail.DetailActivity">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardDetail"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardCornerRadius="28dp"
        app:cardElevation="14dp"
        app:cardBackgroundColor="@color/TP_White"
        android:backgroundTint="@color/TP_White"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp">

            <TextView
                android:id="@+id/tvDetailTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cute"
                android:text="템플릿 타이틀"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/TP_TextPrimary"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <View
                android:id="@+id/divider1"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="12dp"
                android:background="@color/TP_Divider"
                app:layout_constraintTop_toBottomOf="@id/tvDetailTitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <LinearLayout
                android:id="@+id/tagArea"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@id/divider1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:id="@+id/tvDetailSituation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/cute"
                    android:text="상황: 출근"
                    android:textColor="@color/TP_Blue"
                    android:background="@drawable/bg_input"
                    android:padding="8dp"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:id="@+id/tvDetailTarget"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/cute"
                    android:text="상대: 상사"
                    android:textColor="@color/TP_Blue"
                    android:background="@drawable/bg_input"
                    android:padding="8dp"/>
            </LinearLayout>

            <ScrollView
                android:id="@+id/scrollContent"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                app:layout_constraintTop_toBottomOf="@id/tagArea"
                app:layout_constraintBottom_toTopOf="@id/btnCopy"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:id="@+id/tvDetailContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/cute"
                    android:text="템플릿 내용_커뮤니티"
                    android:textColor="@color/TP_Blue"
                    android:background="@drawable/bg_input"
                    android:padding="12dp"/>
            </ScrollView>

            <!-- 복사 버튼 -->
            <ImageButton
                android:id="@+id/btnCopy"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:src="@drawable/ic_copy"
                android:background="@android:color/transparent"
                android:tint="@color/TP_TextPrimary"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/likeArea"
                android:layout_marginEnd="12dp"/>


            <!-- 추천 / 비추천 -->
            <LinearLayout
                android:id="@+id/likeArea"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal"
                android:gravity="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <!-- 추천버튼 -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginEnd="30dp">

                    <ImageButton
                        android:id="@+id/btnLike"
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:src="@drawable/ic_thumb_up"
                        android:background="@android:color/transparent"
                        android:tint="@color/TP_TextPrimary"/>

                    <TextView
                        android:id="@+id/tvLikeCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/TP_TextPrimary"/>
                </LinearLayout>

                <!-- 비추천 버튼 -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageButton
                        android:id="@+id/btnDislike"
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:src="@drawable/ic_thumb_down"
                        android:background="@android:color/transparent"
                        android:tint="@color/TP_TextPrimary"/>

                    <TextView
                        android:id="@+id/tvDislikeCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/TP_TextPrimary"/>
                </LinearLayout>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
