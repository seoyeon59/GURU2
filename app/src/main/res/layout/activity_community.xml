<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient">

    <!-- 제목 -->
    <TextView
        android:id="@+id/tvTopTitle"
        android:layout_width="0dp"
        android:layout_height="84dp"
        android:gravity="center"
        android:fontFamily="@font/black_cat"
        android:textColor="@color/TP_TextPrimary"
        android:textSize="55sp"
        android:background="@color/TP_Blue"
        android:text="Community"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- 목록 배경 부분 -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardBoard"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        app:cardCornerRadius="22dp"
        app:cardElevation="12dp"
        app:cardBackgroundColor="@android:color/white"
        android:backgroundTint="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/tvTopTitle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- 번호, 제목, 작성자 -->
            <LinearLayout
                android:id="@+id/headerRow"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:orientation="horizontal"
                android:background="@color/TP_TextSecondary"
                android:gravity="center_vertical"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:fontFamily="@font/cute"
                    android:text="번호"
                    android:textSize="16sp"
                    android:textColor="@android:color/white"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="22dp"
                    android:background="#33FFFFFF"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingStart="16dp"
                    android:paddingEnd="12dp"
                    android:fontFamily="@font/cute"
                    android:text="제목"
                    android:textSize="16sp"
                    android:textColor="@android:color/white"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="22dp"
                    android:background="#33FFFFFF"/>

                <TextView
                    android:layout_width="88dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:fontFamily="@font/cute"
                    android:text="작성자"
                    android:textSize="16sp"
                    android:textColor="@android:color/white"/>
            </LinearLayout>

            <!-- 커뮤니티 글 목록 -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvCommunity"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:clipToPadding="false"
                android:paddingBottom="8dp"
                app:layout_constraintTop_toBottomOf="@id/headerRow"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
